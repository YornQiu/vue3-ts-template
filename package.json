{
  "name": "vue3-ts-template",
  "version": "0.0.1",
  "author": "Yorn Qiu",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc --noEmit && vite build",
    "preview": "vite preview --port 5050",
    "typecheck": "vue-tsc --noEmit",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "prepare": "husky install"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "element-plus": "^2.4.4",
    "lodash-es": "^4.17.21",
    "meta.css": "^1.6.0",
    "pinia": "^2.1.7",
    "vue": "^3.3.12",
    "vue-router": "^4.2.5"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^18.4.3",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^20.10.5",
    "@vitejs/plugin-vue": "^4.5.2",
    "@vue/eslint-config-prettier": "^8.0.0",
    "@vue/eslint-config-typescript": "^12.0.0",
    "@vue/tsconfig": "^0.5.1",
    "autoprefixer": "^10.4.16",
    "commitlint": "^18.4.3",
    "eslint": "8.56.0",
    "eslint-plugin-vue": "^9.19.2",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "postcss": "^8.4.32",
    "prettier": "^3.1.1",
    "sass": "^1.69.5",
    "typescript": "~5.3.3",
    "unplugin-auto-import": "^0.17.2",
    "unplugin-vue-components": "^0.26.0",
    "vite": "^5.0.10",
    "vue-tsc": "^1.8.25"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "eslint:recommended",
      "plugin:vue/vue3-recommended",
      "@vue/eslint-config-typescript/recommended",
      "@vue/eslint-config-prettier"
    ],
    "env": {
      "node": true,
      "vue/setup-compiler-macros": true
    },
    "rules": {
      "no-undef": "off"
    },
    "ignorePatterns": [
      "auto-imports.d.ts",
      "components.d.ts"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "printWidth": 120
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "lint-staged": {
    "*.{vue,js,ts,jsx,tsx}": "eslint --fix --ignore-path .gitignore"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "type-enum": [
        2,
        "always",
        [
          "feat",
          "fix",
          "docs",
          "style",
          "refactor",
          "test",
          "chore",
          "build",
          "perf",
          "revert"
        ]
      ]
    }
  }
}
